<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Product List</title>
</head>
<body>
<h2>Add Product</h2>
<form action="/add" method="post">
  Name: <input name="name"><br>
  Price: <input name="price"><br>
  Quantity: <input name="quantity"><br>
  <button>Add</button>
</form>

<p align="right"><a href="/logout">Đăng xuất</a></p>

<h2>Products</h2>
<table border="1">
  <tr>
    <th>ID</th><th>Name</th><th>Price</th><th>Quantity</th><th>Action</th>
  </tr>
  <% products.forEach(p => { %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= p.price %></td>
      <td><%= p.quantity %></td>
      <td>
        <a href="/edit/<%= p.id %>">Sửa</a> |
        <a href="/delete/<%= p.id %>" onclick="return confirm('Bạn chắc chắn muốn xóa?')">Xóa</a>
      </td>
    </tr>
  <% }) %>
</table>
</body>
</html>
